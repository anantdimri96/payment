<div class="container" style="margin-top:9%;">
  <div class="row" style="font-family: 'Open Sans', sans-serif;">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Payment
        </div>
        <div class="card-body">
          <%= form_for Card.new do |f| %>
          <div class="form-group">
            <%= f.label :Amount %>
            <%= f.number_field :amount ,class: "form-control required", id: "amount-field",placeholder:"Enter amount", :required => true%>

            <%= f.label :name %>
            <%= f.text_field :name ,class: "form-control required", id: "name-field", placeholder:"Enter name",value:"",:required => true%>

            <%= f.label :email %>
            <%= f.text_field :email ,class: "form-control required",id: "email-field",placeholder:"Enter email",value:"",:required => true%>

            <%= f.label :phone_no %>
            <%= f.number_field :phone_no ,class: "form-control required",id: "phone-field",placeholder:"Enter contact number", :required => true%>

            <br>
            <%=f.submit "Submit",class:"btn btn-success"%>
          </div>

        <%end%>

